#    MACOSX_DEPLOYMENT_TARGET=cr3.app \
MACOSX_DEPLOYMENT_TARGET="cr3.app"

CREHOME=`pwd`/../crengine/
WXHOME=`pwd`/../wxWidgets/

ls optimized > /dev/null 2> /dev/null || mkdir optimized
cd optimized

# --enable-static=yes 
../configure --enable-unicode --enable-debug=no \
    --with-wx-config=${WXHOME}/build/linux/Release/wx-config \
    LDFLAGS="-L${CREHOME}lib -lcrengined " \
    CPPFLAGS="-I${CREHOME}include -DLINUX -D_LINUX "
