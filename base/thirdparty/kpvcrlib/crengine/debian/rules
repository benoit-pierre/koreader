clean::
	cmake -D CMAKE_TOOLCHAIN_FILE=tools/toolchain-$(DEB_HOST_GNU_TYPE).cmake -D GUI=CRGUI_XCB .

#	./configure --prefix=/usr --sysconfdir=/etc $(DEB_CONFIGURE_EXTRA_FLAGS)
