#!./luajit
--[[
compatibility wrapper

this replaces the former standalone binary which invoked the Lua interpreter/compiler.
now, we use the "default" interpreter/compiler
]]--

require "lib/libkoreader-blitbuffer"
require "lib/libkoreader-cre"
require "lib/libkoreader-djvu"
require "lib/libkoreader-drawcontext"
require "lib/libkoreader-einkfb"
require "lib/libkoreader-ft"
require "lib/libkoreader-input"
require "lib/libkoreader-koptcontext"
require "lib/libkoreader-lfs"
require "lib/libkoreader-mupdfimg"
require "lib/libkoreader-pdf"
require "lib/libkoreader-pic"
require "lib/libkoreader-util"
require "lib/libkoreader-luagettext"
require "lib/libkoreader-kobolight"

if not arg[1] then
	error("you must give the name of the main lua executable as the first argument")
end
local file = arg[1]
table.remove(arg, 1)

ARGV=arg

dofile(file)
